<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>53.0</apiVersion>
  <description>D3 COTS LineChart</description>
  <isExposed>true</isExposed>
  <masterLabel>D3 COTS LineChart</masterLabel>
  <targets>
    <target>lightning__AppPage</target>
    <target>lightning__RecordPage</target>
    <target>lightning__HomePage</target>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>

  <targetConfigs>
    <targetConfig targets="lightning__AppPage">
      <property
        name="lwcTitle"
        type="String"
        default="Client Objectives"
        label="Enter a LWC title"
      />
      <property
        name="chartTitle"
        type="String"
        default="Objective Counts Vs. Sessions"
        label="Enter a chart title"
      />
      <property
        name="chartSubTitle"
        type="String"
        default="Refreshed Sunday @10pm"
        label="Enter a chart sub-title"
      />
      <supportedFormFactors>
        <supportedFormFactor type="Small" />
      </supportedFormFactors>
    </targetConfig>
    <targetConfig targets="lightning__RecordPage">
      <property
        name="lwcTitle"
        type="String"
        default="Client Objectives"
        label="Enter a LWC title"
      />
      <property
        name="chartTitle"
        type="String"
        default="Objective Counts Vs. Sessions"
        label="Enter a chart title"
      />
      <property
        name="chartSubTitle"
        type="String"
        default="Refreshed Sunday @10pm"
        label="Enter a chart sub-title"
      />

      <supportedFormFactors>
        <supportedFormFactor type="Large" />
        <supportedFormFactor type="Small" />
      </supportedFormFactors>
    </targetConfig>
    <targetConfig targets="lightning__HomePage">
      <property
        name="lwcTitle"
        type="String"
        default="Client Objectives"
        label="Enter a LWC title"
      />
      <property
        name="chartTitle"
        type="String"
        default="Objective Counts Vs. Sessions"
        label="Enter a chart title"
      />
      <property
        name="chartSubTitle"
        type="String"
        default="Refreshed Sunday @10pm"
        label="Enter a chart sub-title"
      />

      <supportedFormFactors>
        <supportedFormFactor type="Large" />
      </supportedFormFactors>
    </targetConfig>
    <targetConfig targets="lightningCommunity__Default">
      <property name="recordId" type="String" default="{!Route.recordId}" />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>